<form action="Update" method="POST">
        <div class="form-group">
            <label for="id">Id</label>
            <input type="text" name="id" id="id" class="form-control" value="@Model.Id" readonly>
        </div>  
        <div class="form-group" >
            <label for="number">Number</label>
            <input type="text" name="number" id="number" class="form-control" value="@Model.Number" required>
        </div> 
        <div class="form-group" >
            <label for="name">Nome</label>
            <input type="text" name="name" id="name" class="form-control" value="@Model.Name" required>
        </div> 
        <div class="form-group" >
            <label for="sector">Bloco</label>
            <input type="text" name="sector" id="sector" class="form-control" value="@Model.Sector" required>
        </div> 
        
        <button type="submit" class="btn btn-primary">Cadastrar</button>
    </form>